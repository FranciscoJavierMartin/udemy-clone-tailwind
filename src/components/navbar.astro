<!-- TODO: When a menu appears, then hide the rest -->
<nav class='flex flex-wrap items-center gap-6 px-8 py-3 text-sm'>
  <img
    src='/udemy-clone-tailwind/images/logo-udemy.svg'
    alt='Udemy logo'
    class='h-8'
  />
  <!-- Categories -->
