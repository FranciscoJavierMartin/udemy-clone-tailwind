---
import ChevronRight from './icons/chevron-right.astro';
---

<!-- TODO: When a menu appears, then hide the rest -->
<header class='flex flex-wrap items-center gap-6 px-8 py-3 text-sm'>
  <img
    src='/udemy-clone-tailwind/images/logo-udemy.svg'
    alt='Udemy logo'
    class='h-8'
  />
  <!-- Categories -->
  <!-- TODO: Refactor into components -->
  <div
    x-data='{ 
        menuCategories: false, 
        menuCategoriesDevelopment: false,
        menuCategoriesBussiness: false, 
        menuCategoriesFinance: false,
        menuCategoriesDevelopmentWebDevelopment: false,
        menuCategoriesDevelopmentIT: false,
      }'
  >
    <div
      class='hover:cursor-pointer hover:text-udemy'
      @click='menuCategories =! menuCategories'
    >
      Categorias
    </div>

    <div
      x-show='menuCategories'
      class='absolute mt-8 grid min-h-[300px] grid-cols-3'
    >
      <div x-show='menuCategories' class='w-[240px] border border-gray-300'>
        <ul>
          <li
            @click='menuCategoriesDevelopment = !menuCategoriesDevelopment'
            @click.away='menuCategoriesDevelopment = false'
            class='flex items-center justify-between p-4 hover:cursor-pointer hover:text-udemy'
          >
            Desarrollo
            <ChevronRight />
          </li>
          <li
            @click='menuCategoriesBussiness = !menuCategoriesBussiness'
            @click.away='menuCategoriesBussiness = false'
            class='flex items-center justify-between px-4 py-1 hover:cursor-pointer hover:text-udemy'
          >
            Negocios
            <ChevronRight />
          </li>
          <li
            @click='menuCategoriesFinance = !menuCategoriesFinance'
            @click.away='menuCategoriesFinance = false'
            class='flex items-center justify-between p-4 hover:cursor-pointer hover:text-udemy'
          >
            Finanzas y contabilidad
            <ChevronRight />
          </li>
        </ul>
      </div>
      <div
        x-show='menuCategoriesDevelopment'
        class='border border-l-0 border-gray-300'
      >
        <ul>
          <li
            @mouseover='menuCategoriesDevelopmentWebDevelopment = true'
            @mouseout='menuCategoriesDevelopmentWebDevelopment = false'
            class='flex items-center justify-between p-4 hover:cursor-pointer hover:text-udemy'
          >
            Desarrollo web
          </li>
          <li
            @mouseover='menuCategoriesDevelopmentIT = true'
            @mouseout='menuCategoriesDevelopmentIT = false'
            class='flex items-center justify-between px-4 py-1 hover:cursor-pointer hover:text-udemy'
          >
            Ciencias de la información
          </li>
          <li
            class='flex items-center justify-between p-4 hover:cursor-pointer hover:text-udemy'
          >
            Desarrollo móvil
          </li>
        </ul>
      </div>
      <div
        x-show='menuCategoriesBussiness'
        class='border border-l-0 border-gray-300'
      >
        <ul>
          <li class='p-4 hover:cursor-pointer hover:text-udemy'>
            Comunicación
          </li>
          <li class='px-4 py-1 hover:cursor-pointer hover:text-udemy'>
            Emprendimiento
          </li>
          <li class='p-4 hover:cursor-pointer hover:text-udemy'>
            Gestión empresarial
          </li>
        </ul>
      </div>
      <div
        x-show='menuCategoriesFinance'
        class='border border-l-0 border-gray-300'
      >
        <ul>
          <li class='p-4 hover:cursor-pointer hover:text-udemy'>
            Contabilidad
          </li>
          <li class='px-4 py-1 hover:cursor-pointer hover:text-udemy'>
            Cumplimiento
          </li>
          <li class='p-4 hover:cursor-pointer hover:text-udemy'>
            Criptomonedas
          </li>
        </ul>
      </div>
      <div
        x-show='menuCategoriesDevelopmentWebDevelopment'
        class='border border-l-0 border-gray-300 p-4'
      >
        <ul class='space-y-4'>
          <li class='font-medium'>Temas populares</li>
          <li>TypeScript</li>
          <li>React.js</li>
          <li>Qwik.js</li>
        </ul>
      </div>
      <div
        x-show='menuCategoriesDevelopmentIT'
        class='border border-l-0 border-gray-300 p-4'
      >
        <ul class='space-y-4'>
          <li class='font-medium'>Temas populares</li>
          <li>Python</li>
          <li>Aprendizaje automático</li>
          <li>Aprendizaje profundo</li>
        </ul>
      </div>
    </div>
  </div>
  <!-- End of categories -->
  <!-- Search bar -->
  <div
    class='flex grow items-center gap-3 rounded-full border border-primary bg-gray-50 p-3 text-gray-400'
  >
    <svg
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      stroke-width='2'
      stroke='currentColor'
      class='size-4'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        d='m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z'
      ></path>
    </svg>
    <!-- TODO: Remove border when focus -->
    <input
      class='w-full border-0 bg-gray-50 placeholder-gray-500'
      placeholder='Buscar cualquier cosa'
    />
  </div>
  <!-- End of Search bar -->
  <!-- Udemy Business -->
  <div
    x-data='{menuUdemyBusiness: false}'
    class='relative'
    @click.away='menuUdemyBusiness = false'
  >
    <div
      class='hover:cursor-pointer hover:text-udemy'
      @mouseover='menuUdemyBusiness = true'
      @click='menuUdemyBusiness = !menuUdemyBusiness'
    >
      Udemy Business
    </div>

    <div
      x-show='menuUdemyBusiness'
      class='absolute right-0 mt-8 w-[300px] border border-gray-300 p-4 text-center'
    >
      <div class='text-xl font-semibold'>
        Dale a tu equipo acceso a más de 24.00 de los mejores cursos de Udemy en
        cualquier momento y lugar.
      </div>
      <a
        href='#'
        class='mt-4 block bg-primary p-4 text-lg text-white hover:bg-primary-light'
      >
        Prueba Udemy Business
      </a>
    </div>
  </div>
  <!-- End of Udemy Business -->
  <!-- Instructor -->
  <div>
    <a href='#' class='hover:text-udemy'> Instructor </a>
  </div>
  <!-- End of Instructor -->
  <!-- My learning -->
  <!-- TODO: Refactor into components -->
  <div
    x-data='{menuMyLearning: false}'
    class='relative'
    @click.away='menuMyLearning = false'
  >
    <div
      @mouseover='menuMyLearning = true'
      @click='menuMyLearning = !menuMyLearning'
      class='hover:cursor-pointer hover:text-udemy'
    >
      Mi aprendizaje
    </div>
    <div
      x-show='menuMyLearning'
      class='absolute right-0 mt-8 w-[300px] divide-y border border-gray-300'
    >
      <a href='#' class='flex gap-3 p-4'>
        <img
          src='/udemy-clone-tailwind/images/header/aprendizaje/curso1.png'
          alt='Aprende Tailwind CSS con ejemplos reales'
          class='size-16 object-cover'
        />
        <div>
          <p class='font-semibold leading-tight'>
            Aprende Tailwind CSS con ejemplos reales
          </p>
          <div class='mt-2 h-2 bg-gray-300'>
            <div class='h-full w-2/5 bg-udemy'></div>
          </div>
        </div>
      </a>
      <a href='#' class='flex gap-3 p-4'>
        <img
          src='/udemy-clone-tailwind/images/header/aprendizaje/curso2.png'
          alt='React Avançado: Crie aplicaçaões com NextJS, Strapi e mais'
          class='size-16 object-cover'
        />
        <div>
          <p class='font-semibold leading-tight'>
            React Avançado: Crie aplicaçaões com NextJS, Strapi e mais
          </p>
          <div class='mt-2 h-2 bg-gray-300'>
            <div class='h-full w-3/5 bg-udemy'></div>
          </div>
        </div>
      </a>
      <a href='#' class='flex gap-3 p-4'>
        <img
          src='/udemy-clone-tailwind/images/header/aprendizaje/curso3.png'
          alt='Microservices with NodeJS, React, TypeScript and Kubernetes'
          class='size-16 object-cover'
        />
        <div>
          <p class='font-semibold leading-tight'>
            Microservices with NodeJS, React, TypeScript and Kubernetes
          </p>
          <div class='mt-2 h-2 bg-gray-300'>
            <div class='h-full w-2/12 bg-udemy'></div>
          </div>
        </div>
      </a>
      <a href='#' class='flex gap-3 p-4'>
        <img
          src='/udemy-clone-tailwind/images/header/aprendizaje/curso4.png'
          alt='Build an app with React, Redux and Firestore from scratch'
          class='size-16 object-cover'
        />
        <div>
          <p class='font-semibold leading-tight'>
            Build an app with React, Redux and Firestore from scratch
          </p>
          <div class='mt-2 h-2 bg-gray-300'>
            <div class='h-full w-4/5 bg-udemy'></div>
          </div>
        </div>
      </a>
      <div class='p-4 text-center'>
        <a
          href='#'
          class='block bg-primary p-4 text-lg text-white hover:bg-primary-light'
        >
          Ir a mi aprendizaje
        </a>
      </div>
    </div>
  </div>
  <!-- End of My learning -->
  <!-- Favorites -->
  <!-- TODO: Refactor into components -->
  <div
    x-data='{menuWishList: false}'
    class='relative'
    @click.away='menuWishList = false'
  >
    <svg
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      stroke-width='2'
      stroke='currentColor'
      class='size-6 hover:cursor-pointer hover:text-udemy'
      @mouseover='menuWishList = !menuWishList'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z'
      ></path>
    </svg>
    <div
      x-show='menuWishList'
      class='absolute right-0 mt-8 w-[300px] divide-y divide-gray-300 border border-gray-300'
    >
      <div>
        <a href='#' class='flex gap-3 p-4'>
          <img
            src='/udemy-clone-tailwind/images/header/deseo/curso1.png'
            alt='The Nuxt 3 Bootcamp - The Complete Developer Guide'
            class='size-16 object-cover'
          />
          <div>
            <p class='line-clamp-2 font-semibold leading-tight'>
              The Nuxt 3 Bootcamp - The Complete Developer Guide
            </p>
            <p class='my-1 text-xs text-gray-500'>Laith Harb</p>
            <div>
              <span class='mr-2 font-semibold'>11,99 €</span>
              <span class='text-gray-500 line-through'>99,99 €</span>
            </div>
          </div>
        </a>
        <div class='p-4 pt-0 text-center'>
          <a
            href='#'
            class='block border border-primary p-4 font-semibold hover:bg-gray-100'
          >
            Añadir a la cesta
          </a>
        </div>
      </div>
      <div>
        <a href='#' class='flex gap-3 p-4'>
          <img
            src='/udemy-clone-tailwind/images/header/deseo/curso2.png'
            alt='Cucumber Playwright TypeScript Automation Framework'
            class='size-16 object-cover'
          />
          <div>
            <p class='line-clamp-2 font-semibold leading-tight'>
              Cucumber Playwright TypeScript Automation Framework
            </p>
            <p class='my-1 text-xs text-gray-500'>Cameron Bradley</p>
            <div>
              <span class='mr-2 font-semibold'>11,99 €</span>
              <span class='text-gray-500 line-through'>99,99 €</span>
            </div>
          </div>
        </a>
        <div class='p-4 pt-0 text-center'>
          <a
            href='#'
            class='block border border-primary p-4 font-semibold hover:bg-gray-100'
          >
            Añadir a la cesta
          </a>
        </div>
      </div>
      <div>
        <a href='#' class='flex gap-3 p-4'>
          <img
            src='/udemy-clone-tailwind/images/header/deseo/curso3.png'
            alt='Crea una tienda online (Ecommerce) con NestJS y Angular'
            class='size-16 object-cover'
          />
          <div>
            <p class='line-clamp-2 font-semibold leading-tight'>
              Crea una tienda online (Ecommerce) con NestJS y Angular
            </p>
            <p class='my-1 text-xs text-gray-500'>Diego Arca</p>
            <div>
              <span class='mr-2 font-semibold'>10,99 €</span>
              <span class='text-gray-500 line-through'>49,99 €</span>
            </div>
          </div>
        </a>
        <div class='p-4 pt-0 text-center'>
          <a
            href='#'
            class='block border border-primary p-4 font-semibold hover:bg-gray-100'
          >
            Añadir a la cesta
          </a>
        </div>
      </div>
      <div class='p-4 text-center'>
        <a
          href='#'
          class='block bg-primary p-4 text-base text-white hover:bg-gray-100'
        >
          Ir a la lista de deseos
        </a>
      </div>
    </div>
  </div>
  <!-- End of favorites -->
  <!-- Shopping cart -->
  <div>
    <svg
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      stroke-width='2'
      stroke='currentColor'
      class='size-6 hover:text-udemy'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 0 0-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 0 0-16.536-1.84M7.5 14.25 5.106 5.272M6 20.25a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Zm12.75 0a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z'
      ></path>
    </svg>
    <div class='w-[300px] divide-y divide-gray-300 border border-gray-300'>
      <div>
        <a href='#' class='flex gap-3 p-4'>
          <img
            src='/udemy-clone-tailwind/images/header/carrito/curso1.png'
            alt='Playwright con Typescript'
            class='size-16 object-cover'
          />
          <div>
            <p class='line-clamp-2 font-semibold leading-tight'>
              Playwright con Typescript
            </p>
            <p class='my-1 line-clamp-1 text-xs text-gray-500'>
              Rodrigo Villanueva Nieto
            </p>
            <div>
              <span class='mr-2 font-semibold'>11,99 €</span>
              <span class='text-gray-500 line-through'>99,99 €</span>
            </div>
          </div>
        </a>
      </div>
      <div>
        <a href='#' class='flex gap-3 p-4'>
          <img
            src='/udemy-clone-tailwind/images/header/carrito/curso2.png'
            alt='The Complete Pandas Bootcamp 2024: Data Science with Python'
            class='size-16 object-cover'
          />
          <div>
            <p class='line-clamp-2 font-semibold leading-tight'>
              The Complete Pandas Bootcamp 2024: Data Science with Python
            </p>
            <p class='my-1 line-clamp-1 text-xs text-gray-500'>
              Alexander Hagmann
            </p>
            <div>
              <span class='mr-2 font-semibold'>11,99 €</span>
              <span class='text-gray-500 line-through'>99,99 €</span>
            </div>
          </div>
        </a>
      </div>

      <div class='p-4 text-center'>
        <a
          href='#'
          class='block bg-primary p-4 text-base text-white hover:bg-gray-100'
        >
          Ir a la lista de deseos
        </a>
      </div>
    </div>
  </div>
  <!-- End of shopping cart -->
  <!-- Notifications -->
  <div>
    <svg
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      stroke-width='2'
      stroke='currentColor'
      class='size-6 hover:text-udemy'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0'
      ></path>
    </svg>
  </div>
  <!-- End of Notifications -->
  <!-- Profile -->
  <div>
    <img
      src='/udemy-clone-tailwind/images/ibon-azkoitia.jpg'
      alt='User avatar'
      class='size-8 rounded-full border border-gray-300'
    />
  </div>
  <!-- End of profile -->
</header>
